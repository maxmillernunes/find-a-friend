{
  "$schema": "https://json.schemastore.org/tsconfig",
  "_version": "22.0.0",

  "compilerOptions": {
    "module": "ESNext",
    "moduleResolution": "node",

    "target": "ES2023",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,

    "baseUrl": "./",
    "paths": {
      "@/*": ["./src/*"],
      "@/prisma-client": ["./generated/prisma/client"]
    }
  }
}
